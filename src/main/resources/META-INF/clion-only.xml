<idea-plugin>
    <extensions defaultExtensionNs="cidr.debugger">
        <languageSupportFactory implementation="org.jetbrains.fortran.debugger.lang.FortranDebuggerLanguageSupportFactory"
                                order="first"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="org.jetbrains.fortran.debugger.runconfig.FortranRunConfigurationType"/>
        <xdebugger.breakpointType implementation="org.jetbrains.fortran.debugger.FortranLineBreakpointType"/>


        <projectService serviceInterface="org.jetbrains.fortran.debugger.dataView.FortranDataView" serviceImplementation="org.jetbrains.fortran.debugger.dataView.FortranDataView"/>
    </extensions>

    <actions>
        <action id="Fortran.ViewArray" class="org.jetbrains.fortran.debugger.dataView.FortranViewNumericContainerAction" text="View as Array">
            <add-to-group group-id="XDebugger.ValueGroup" anchor="after" relative-to-action="Debugger.AddToWatch"/>
        </action>
    </actions>
</idea-plugin>